<!DOCTYPE html>
<html>
  <head>
    <title>Upload Content</title>

    <script type="text/javascript" src="/assets/home/bootstrap.min.js"></script>
    <script type="text/javascript" src="/assets/home/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/assets/home/main.css" />
    <link rel="stylesheet" type="text/css" href="/assets/home/profile.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/assets/home/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/assets/home/dropdown.css" />
  </head>
  <body>
    <ul>
      <li><a href="/">Home</a></li>
      <li style="float: left">
        <div class="dropdown">
          <div class="dropbtn">Content</div>
          <div class="dropdown-content">
            <a href="/home/viewContent">View Content</a>
            <a href="/home/uploadContent">Upload Content</a>
            <a href="/home/deleteContent">Delete Content</a>
          </div>
        </div>
      </li>
    </ul>
    <div class="container emp-profile">
      <% if (errorMsg){ %>
      <div style="text-align: center">Select Files to Upload!!!</div>
      <br />
      <% } %>

      <h1 align:middle>Upload Content</h1>
      <form method="post" enctype="multipart/form-data">
        <span class="btn btn-success fileinput-button">
          <i class="glyphicon glyphicon-plus"></i>
          <span>Add files</span>
          <input type="file" name="files" multiple />
        </span>
        <br />
        <br />
